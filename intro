#!/bin/bash
#this is toodoo intro version < 1
#it is evaluation, examination, experiment and exercise
#the code is commented in english

#retrieve name
var0=`basename "$0"`;
#output name
echo $var0;
#retrieve arguments to var1 to var5
var1=$1;
var2=$2;
var3=$3;
var4=$4;
var5=$5;

#the arguments array is passed to $self[i]
self[1]=$var1;
self[2]=$var2;
self[3]=$var3;
self[4]=$var4;
self[5]=$var5;

#output and count arguments
j=0
for i in ${self[@]}; do
echo $i
j+=1
done
slength=$j
#echo $COUNTER
#boole b1 must be set if argument $1 exists (!-ne)
if [ -z "$var1" ]
  then
        b1=false
else
	b1=true 
fi
#boole b2
if [ -z "$var2" ]
  then
        b2=false
else
	b2=true 
fi
#boole b3
if [ -z "$var3" ]
  then
        b3=false
else
	b3=true 
fi
#boole b4
if [ -z "$var4" ]
  then
        b4=false
else
	b4=true 
fi
#boole b5
if [ -z "$var5" ]
  then
        b5=false
else
	b5=true 
fi
#now we have all we need

#check the five boolean
if [ [ $b1 ] || [ $b2 ] || [ $b3 ] || [ $b4 ] || [ $b5 ] ];
then flag=1
else flag=0
fi
    if [ $flag=1 ]
    then
#whether exists or not output status and argument 
            if [ $b1 ]
            then
            echo argument ${var1} exists
#other case
            else
            echo argument ${var1} does not exist
            fi
            if [ $b2 ]
            then
            echo argument ${var2} exists
            else
            echo argument ${var2} does not exist
            fi
		    if [ $b3 ]
            then
            echo argument ${var3} exists
            else
            echo argument ${var3} does not exist
            fi
            if [ $b4 ]
            then
            echo argument ${var4} exists
            else
            echo argument ${var4} does not exist
            fi
            if [ $b5 ]
            then
            echo argument ${var5} exists
            else
            echo argument ${var5} does not exist
            fi
    else
#error message and exit if invalid arguments
    echo "Arguments are zero or > 5"
#exit 1
    exit 1
    fi
#toodoo count length of array
#array syntax is variable[index]
printf 'slength:%s\n' "$slength";
#exit 0
exit 0
